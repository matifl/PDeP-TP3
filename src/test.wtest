import example.*

describe "Test de Pou" {

	var juego = "pelota"

	test "Energia inicial de Pou" {
		assert.equals(30, pou.energiaInicial())
	}

	test "Tiene hambre Pou" {
		assert.notThat(pou.tieneHambre())
	}

	test "Si come fruta tiene hambre pou" {
		pou.comer(fruta)
		assert.notThat(pou.tieneHambre())
	}

	test "Cuando juega con una pelota, se rie pou" {
		pou.reir()
		assert.equals("jijijiji", pou.jugar(juego))
	}

	test "Cuando tiene hambre no se rie pou" {
		pou.reir()
		assert.notThat(pou.tieneHambre())
	}

	test "cuando se baña su energia disminuye" {
		pou.baniarse()
		assert.equals(28, pou.energia())
	}

	test "cuando se baña su energia disminuye
			cuando se energiza recupera su energia" {
		pou.baniarse()
		pou.energizarse()
		assert.equals(30, pou.energia())
	}

	test "Pou tiene una salud deplorable si come frituras" {
		pou.comer(fritura)
		assert.equals("Deplorable", pou.salud())
	}

	test "Pou tiene una salud normal si come saludable " {
		pou.comer(fruta)
		assert.equals("Normal", pou.salud())
	}

	test "Pou tiene una salud alarmanete si come saludable e insalubre " {
		pou.comer(fruta)
		pou.comer(fritura)
		assert.equals("Alarmante", pou.salud())
	}

}



